@{
}

<div class="card m-0">
    <div class="card-body">
        <h5 class="card-title">EmployeeProject Table</h5>


        <a asp-controller="EmployeeProject" asp-action="EmployeeProjectForm">
            <button type="button" class="btn btn-primary float-end"><i class="ri-add-circle-line"></i> Add EmployeeProject</button>
        </a>
        <!-- Default Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">EmployeeProjectId</th>
                    <th scope="col">EmployeeId</th>
                    <th scope="col">ProjectId</th>
                    <th scope="col">Actions&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var empproject in ViewBag.employeeProjectData)
                    {
                        <tr>
                            <td>@empproject.employeeProjectId</td>
                            <td>@empproject.employeeId</td>
                            <td>@empproject.projectId</td>
                            <td>
                                <button type="button" class="btn btn-success "><i class="bx bxs-edit"></i></button>
                                <button type="button" class="btn btn-danger "><i class="ri-delete-bin-2-fill"></i></button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <!-- End Default Table Example -->
    </div>
</div>

